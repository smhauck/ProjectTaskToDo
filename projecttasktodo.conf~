# rename this file to projecttasktodo.yml and put a ':' after 'name' if
# you want to use YAML like in old versions of Catalyst
name ProjectTaskToDo
<authentication>
	default_realm dbic
	<realms>
		<dbic>
			<credential>
				class Password
				password_field password
				password_type crypted
			</credential>
			<store>
				class DBIx::Class
				user_class TaskMasterDB::User
				role_relation roles
				role_field role
			</store>
		</dbic>
	</realms>
</authentication>


