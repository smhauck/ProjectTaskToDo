
html {
    background-color: #fff;
    height: 100%;
    font-size: .8em;
    font-family: times, Verdana, arial, helvetica, sans-serif;
}

body { 
    background-color: #fff;
    color: #000;
}

a:link {
	color: #003399;
}

a:visited {
	color: #990033;
}

#header {
    background-color: #fff;
    border-bottom: 1px solid #222;
}

#sitetitle a:link, #sitetitle a:visited, #sitetitle a:hover {
	color: #000;
}

#sitetitle {
	padding: 0px;
	margin: 0px;
}

.footnote {
    background-color: [% site.col.page %];
    border-top: 1px solid [% site.col.line %];
}

#footer {
	clear: both;
    background-color: #ddd;
    text-align: center;
    border-top: 1px solid #222;
    position: relative;
    bottom: 0;
    left: 0px;
    width: 100%;
}

#content {
}

#searchbox {
}

#personsearch {
	clear: both;
	float: right;
	position: relative;
}

#headshot {
	display: block;
	float: right;
}

#persondetails {
}

h1.title {
}

h1 a {
	text-decoration: none;
}

.message {
    color: [% site.col.message %];
}

.error {
    color: [% site.col.error %];
}

table {
	border: 0px dotted black;
	border-collapse: collapse;
	border-collapse: separate;
	empty-cells: show;
	font-size: 100%;
}

table caption {
	font-size: 120%;
	font-weight: bold;
	text-align: left;
}

table tr:hover {
	background: #f0f0f0;
}

th {
	border: 0px dotted darkgrey;
	text-align: left;
}

td {
	border-top: 0px solid blue;
	border-bottom: 1px dotted #CCCCCC;
	border-right: 0px solid green;
	border-left: 0px solid orange;
	vertical-align: top;
}

table.performancesearchresults {
	width: 100%;
	border: 0px dotted black;
	border-collapse: collapse;
	border-collapse: separate;
	empty-cells: show;
	font-size: 100%;
	text-align: left;
}

th#movie_search_results_title {
	width: 35%;
	border: 0px dotted darkgrey;
	text-align: left;
}

th#movie_search_results_copyright_date {
	width: 5%;
	border: 0px dotted darkgrey;
	text-align: left;
}

th#movie_search_results_genre {
	width: 5%;
	border: 0px dotted darkgrey;
	text-align: left;
}

th#movie_search_results_description{
	width: 45%;
	border: 0px dotted darkgrey;
	text-align: left;
}

table.stats {
	width:50%;
}

th.number {
	text-align: right;
}

td.number {
	text-align: right;
}
